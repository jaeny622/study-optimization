{
  "name": "lecture-3",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "axios": "^1.12.2",
    "express": "4",
    "fontfaceobserver": "^2.3.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "tailwindcss": "^1.1.4"
  },
  "scripts": {
    "start": "set NODE_OPTIONS=--openssl-legacy-provider && npm run build:style && react-scripts start",
    "build": "set NODE_OPTIONS=--openssl-legacy-provider && npm run build:style && react-scripts build",
    "build:style": "postcss src/tailwind.css -o src/styles.css",
    "serve": "node ./server/server.js",
    "server": "node ./node_modules/json-server/lib/cli/bin.js --watch ./server/database.json -c ./server/config.json",
    "purge": "purgecss --css ./build/static/css/*.css --content ./src/**/*.{js,jsx,ts,tsx,html} --output ./build/static/css  --config ./purgecss.config.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "autoprefixer": "^9.7.3",
    "json-server": "^0.15.1",
    "postcss-cli": "^7.1.0",
    "purgecss": "4.1.3",
    "serve": "^11.3.2"
  }
}
